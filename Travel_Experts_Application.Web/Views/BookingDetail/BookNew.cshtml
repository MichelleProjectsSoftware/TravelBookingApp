@{
    ViewData["Title"] = "New Booking";
}


<div class="text-white text-center bg-primary mt-5 mb-5">
    <h3>Book Your Next Trip</h3>
</div>


<form>

    <div class="row mb-3 mt-3">
        <label  class="col-form-label col-md-2">Trip Starting Date</label>
        <div class="col-md-6">
            <input type="date" class="form-control" name="tripStartDate" id="tripStartDate" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-form-label col-md-2">Trip End Date</label>
        <div class="col-md-6">
            <input type="date" class="form-control" name="tripEndDate" id="tripEndDate" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-form-label col-md-2">Trip Pacakge</label>
        <div class="col-md-6">
            <select class="form-control form-select" asp-items="@ViewBag.Packages">
                <option>Select A Trip</option>
            </select>
        </div>
    </div>

    <div class="row">
        <button asp-controller="BookingDetail" asp-action="ThankYou" class="btn btn-primary col-md-2">ADD</button>
        <a asp-controller="BookingDetail" asp-action="BookingById" class="btn btn-secondary col-md-2">Cancel</a>
    </div>
</form>
