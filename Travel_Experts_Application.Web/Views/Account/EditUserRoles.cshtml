@model IList<UserRolesViewModel>

@{
    ViewData["Title"] = "User Roles";
    string userId = ViewData["UserId"] as string;
}

<form method="post" asp-controller="Account" asp-action="EditUserRoles">

    <div class="card">

        <div class="card-header">
            <h3>Add or Remove Roles from User</h3>

        </div>

        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check form-switch">
                    <input asp-for="@userId" hidden />
                    <input asp-for="@Model[i].RoleId" hidden />
                    <input asp-for="@Model[i].RoleName" hidden />
                    <input asp-for="@Model[i].IsRoleSelected" class="form-check-input" />
                    <label asp-for="@Model[i].IsRoleSelected" class="form-check-label">
                        @Model[i].RoleName
                    </label>
                </div>
            }

        </div>


        <div class="card-footer text-center">
            <button type="submit" class="btn btn-primary col-md-2">Update Role</button>
            <a asp-controller="Account" asp-action="EditUser" asp-route-id="@userId" class="btn btn-secondary col-md-2">Cancel</a>
        </div>

    </div>





</form>